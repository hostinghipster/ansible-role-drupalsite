[global]
pid = /var/run/php5-fpm-{{short_name}}.pid
error_log = /var/log/php5-fpm-{{short_name}}.log

[{{short_name}}]

user = www-data
group = www-data

listen = /var/run/php5-fpm-{{short_name}}.sock

listen.owner = www-data
listen.group = www-data
listen.mode = 0666

php_admin_value[disable_functions] = exec,passthru,shell_exec,system
php_admin_flag[allow_url_fopen] = off

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

chdir = /
